    "values": [
        "\u591c\u884c\u795e\u9f99",
        "Gargoyles\u00a0",
        "\u7f8e\u56fd\u5e7f\u64ad\u516c\u53f8",
        "\u7f8e\u56fd",
        "1994-10-24(\u7f8e\u56fd)",
        "78\u96c6",
